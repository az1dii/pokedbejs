<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs') %>
</head>

<body>
    <div class="headline">
        <h2 style="color:rgb(9, 9, 9)">Pokemon Edit</h2>
    </div>
    <form action="/pokemon/<%= x%>?_method=PUT" method="POST">
        <div class="row">
            <div class="six columns">
                <label for="name">Name</label>
                <input class="u-full-width" type="text" name="name" placeholder="enter pokemon name" value="<%= name%>">
            </div> 
        </div>

        <div class="row">
            <div class="six columns">
                <label for="type">Type</label>
                <input class="u-full-width" type="text" name="type" placeholder="enter type" value="<%= type%>">
            </div>
        </div>
        <!-- STATS  -->
        <table>
            <thead>
                <tr><th> Stats</th></tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" placeholder="enter hp" name="hp" value="<%=  hp%>"></td>
                </tr>

                <tr>
                    <td><input type="text" placeholder="enter attack" name="attack" value="<%= attack%>"></td>
                </tr>

                <tr>
                    <td><input type="text" placeholder="enter defence" name="defense" value="<%= defense%>"></td>
                </tr>

                <tr>
                    <td><input type="text" placeholder="enter spattack" name="spattack" value="<%= spattack%>"></td>
                </tr>

                <tr>
                    <td><input type="text" placeholder="enter spdefense" name="spdefense" value="<%= spdefense%>"></td>
                </tr>

                <tr>
                    <td><input type="text" placeholder="enter speed" name="speed" value="<%= speed%>"></td>
                </tr>
            </tbody>
        </table>
        <input style="background-color:rgb(65, 196, 189);" type="submit" value="Add">
        <a href="/pokemon" class="button" style="color:rgb(65, 196, 189)">Back</a>
    </form>
</body>

</html>